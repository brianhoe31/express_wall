<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Wall</title>
</head>
<body>
    <h1>The Wall</h1>
    <a href="/logout">Logout</a>
    <h2>Wall comments go here:</h2>

    <form action="/message/new" method='post'>
        <input type="text" name="message" placeholder="Enter Message">
        <input type="submit" value="Submit">
    </form>

    <hr>

    <div class="message">
        <!-- message goes here -->
        <% if(messages.length>0){ %>
            <% for(var i=0; i<messages.length; i++){ %>
                <h4><%= messages[i].message %></h4>
                <p><%= messages[i].first_name + " " + messages[i].last_name %></p>
                <p><%= messages[i].created_at %></p>
                <!-- for(var j=0; j<comments.length; j++){
                    comments[j].comment
                } -->
                <form action="/message/<%= messages[i].id %>/comment/new" method="post">
                    <input type="text" name="comment" placeholder="Reply Comment">
                    <input type="submit" value="Submit" >
                </form>
            <% } %>
        <% } %>
    </div>
</body>
</html>